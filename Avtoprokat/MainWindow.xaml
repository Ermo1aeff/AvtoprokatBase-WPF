<Window x:Class="Avtoprokat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Avtoprokat"
        mc:Ignorable="d"
        Title="Автопрокат" Height="450" Width="800" Topmost="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Content="Модели" Click="ShowModelPage" Height="25" Margin="10 0 0 0"/>
            <Button Content="Марки" Click="ShowMakePage" Height="25" Margin="10 0 0 0"/>
        </StackPanel>
        <Rectangle Fill="Black" Height="1" VerticalAlignment="Bottom" Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="+" Click="AddElement" Height="25" Width="25" Margin="10 0 0 0"/>
            <Button Content="-" Click="DeleteElement" Height="25" Width="25" Margin="10 0 0 0"/>
        </StackPanel>
        <Rectangle Fill="Black" Height="1" VerticalAlignment="Bottom"/>

        <Frame Grid.Row="2" NavigationUIVisibility="Hidden" x:Name="AvtoprokatFrame"/>
    </Grid>
</Window>
